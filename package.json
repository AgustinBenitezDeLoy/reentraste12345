{
  "name": "reentraste-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de reventa de entradas",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "setup": "npm run build && mkdir -p uploads",
    "clean": "rm -rf dist",
    "db:create": "psql -U postgres -c 'CREATE DATABASE reentraste;'",
    "db:setup": "psql -U postgres -d reentraste -f database.sql"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.29",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
